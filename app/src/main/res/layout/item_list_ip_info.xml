<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/adapter_item_spacing"
        android:background="@color/white"
        android:elevation="@dimen/global_elevation"
        android:orientation="vertical"
        android:padding="@dimen/activity_base_margin">

        <TextView
            android:id="@+id/item_ip_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold"
            tools:text="8.8.8.8." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/icon_less_grey"
                android:textSize="@dimen/text_description_size"
                android:text="@string/ip_list_item_searched" />

            <TextView
                android:id="@+id/item_ip_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/adapter_item_spacing"
                android:textColor="@color/icon_less_grey"
                android:textSize="@dimen/text_description_size"
                tools:text="01 Jun 2017" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>